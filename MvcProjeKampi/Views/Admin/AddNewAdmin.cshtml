@model EntityLayer.Concrete.Admin
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />

<h1 class="text-center mb-4">Yeni Admin Ekleme Sayfası</h1>
<br />

<form action="AddNewAdmin" method="post" class="login-form shadow-lg p-4 rounded bg-light" style="max-width: 500px; margin: 0 auto;">
    <div class="form-group mb-3">
        <label for="AdminUserName" class="form-label">Kullanıcı Adı</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-user"></i></span>
            </div>
            @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
        </div>
        @Html.ValidationMessageFor(x => x.AdminUserName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        <label for="AdminPassword" class="form-label">Şifre</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-lock"></i></span>
            </div>
            @Html.PasswordFor(x => x.AdminPassword, new { @class = "form-control", placeholder = "*********" })
        </div>
        @Html.ValidationMessageFor(x => x.AdminPassword, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        <label for="AdminRole" class="form-label">Yetki Seçiniz</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-users"></i></span>
            </div>
            @Html.DropDownListFor(x => x.AdminRole, new SelectList(ViewBag.Roles, "Value", "Text"), "Rol Seçin", new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(x => x.AdminRole, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <button type="submit" class="btn btn-primary btn-lg w-100 py-2">Ekle</button>
    </div>
</form>
