
@{
    Layout = null;
}

@model EntityLayer.Concrete.Writer
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>MVC Proje Kampı</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-image: url('/AdminLTE-3.0.4/login-form-20/images/bg.jpg');
            background-size: cover;
            background-position: center;
            height: 100vh;
        }

        .login-wrap {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        .heading-section {
            font-weight: 700;
            color: white;
            text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.5);
        }

        .btn-custom {
            background-color: #007bff;
            color: white;
            transition: all 0.3s ease;
            width: 100%;
            font-weight: 500;
        }

            .btn-custom:hover {
                background-color: #0056b3;
                color: #fff;
                transform: scale(1.03);
            }

        h3 {
            color: #333;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <section class="ftco-section d-flex align-items-center" style="min-height: 100vh;">
        <div class="container">
            <div class="row justify-content-center mb-5">
                <div class="col-md-8 text-center">
                    <h2 class="heading-section">MVC Proje Kampı</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap">
                        <a href="/Login/AdminLogin" class="btn btn-custom mb-3">
                            <i class="fas fa-user-shield mr-2"></i> Admin Girişi
                        </a>

                        <a href="/Login/WriterLogin" class="btn btn-custom mb-3">
                            <i class="fas fa-pen-nib mr-2"></i> Yazar Girişi
                        </a>

                        <a href="/Default/HeadingsDefaultLayout/" class="btn btn-custom mb-3">
                            <i class="fas fa-book mr-2"></i> Sözlük
                        </a>

                        <a href="/Home/HomePage" class="btn btn-custom">
                            <i class="fas fa-info-circle mr-2"></i> Proje Tanıtım Sayfası
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- FontAwesome CDN -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
</html>