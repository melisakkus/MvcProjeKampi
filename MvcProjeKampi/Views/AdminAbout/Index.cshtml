@model List<EntityLayer.Concrete.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<div class="text-center">
    <h4>Hakkımda Bilgileri</h4>
</div>
<br />
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Hakkımda Metin 1</th>
        <th>Hakkımda Metin 2</th>
        <th>Hakkımda Görsel 1</th>
        <th>Hakkımda Görsel 2</th>
        <th>Durum ve İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutId</td>
            <td>@item.AboutDetails1</td>
            <td>@item.AboutDetails2</td>
            <td>@item.AboutImage1</td>
            <td>@item.AboutImage2</td>
            <td>
                <div class="d-flex align-items-center gap-3 flex-wrap">
                    @if (item.IsActive)
                    {
                        <span class="badge badge-success badge-pill mr-2">Aktif</span>
                        <form action="@Url.Action("PassiveAbout", "AdminAbout")" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.AboutId" />
                            <button type="submit" class="btn btn-outline-danger btn-sm mr-2">Pasif Yap</button>
                        </form>
                    }
                    else
                    {
                        <span class="badge badge-danger badge-pill mr-2">Pasif</span>
                        <form action="@Url.Action("ActiveAbout", "AdminAbout")" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.AboutId" />
                            <button type="submit" class="btn btn-outline-success btn-sm mr-2">Aktif Yap</button>
                        </form>
                    }
                    <a href="/AdminAbout/UpdateAbout/@item.AboutId" class="btn btn-outline-warning btn-sm">Güncelle</a>
                </div>
            </td>



        </tr>
    }

</table>
@Html.Action("AboutPartial", "AdminAbout")