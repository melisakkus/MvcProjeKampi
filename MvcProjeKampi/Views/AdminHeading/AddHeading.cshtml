@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<div class="text-center">
    <h4>Yeni Başlık Ekleme</h4>
</div>
<br />
@using (Html.BeginForm("AddHeading", "AdminHeading", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName, "", new { @class = "text-danger" })
        <br />
        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.valueCategory, "Lütfen seçim yapınız.", new { @class = "form-control" })
        @Html.ValidationMessageFor(X => X.CategoryId, "", new { @class = "text-danger" })
        <br />
        @Html.Label("Yazar")
        @Html.DropDownListFor(x => x.WriterId, (List<SelectListItem>)ViewBag.valueWriters, "Lütfen seçim yapınız.", new { @class = "form-control" })
        @Html.ValidationMessageFor(X => X.WriterId, "", new { @class = "text-danger" })
        <br />
        <div class="text-center">
            <button class="btn btn-outline-success" id="btnAdd">Kaydet</button>
        </div>
    </div>
}

